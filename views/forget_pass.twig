{% extends 'base.twig' %}
    {% block title %}Forget Password{% endblock %}
    {% block head %}{{ parent() }}
        <link rel="stylesheet" href="/assets/custom/css/signin.css"/>
    {% endblock %}
{% block content %}
    <form method="post" action="" class="form-signin">
        <h2 class="form-signin-heading">I Forgot My Password</h2>
        <input type="email" id="inputEmail" class="form-control" placeholder="type your E-mail" required/>
        <button class="btn btn-lg btn-link btn-block">Send</button>
        <a class="label label-danger" href="{{ app.url_generator.generate('login') }}">Go back</a>
    </form>
{% endblock %}